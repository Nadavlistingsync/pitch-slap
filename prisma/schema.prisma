// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model EgoDump {
  id        String   @id @default(cuid())
  content   String
  author    String
  likes     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Feedback {
  id        String   @id @default(cuid())
  content   String
  vcStyle   String
  intensity String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SlideFeedback {
  id            String   @id @default(cuid())
  slideNumber   Int
  content       String
  rating        Int      @default(0)
  comments      String?
  brutalityLevel String  @default("moderate")
  deckId        String
  deck          Deck     @relation(fields: [deckId], references: [id])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Deck {
  id          String         @id @default(cuid())
  title       String
  feedback    SlideFeedback[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

model Roast {
  id              String   @id @default(cuid())
  level           String
  content         String
  vcId            String
  vcName          String
  vcFirm          String
  vcImage         String
  vcSpecialties   String[]
  vcDescription   String
  likes           Int      @default(0)
  comments        Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
} 
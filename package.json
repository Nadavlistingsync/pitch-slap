{
  "name": "pitchdeck",
  "version": "0.1.0",
  "private": true,
  "main": "src/app/page.tsx",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "push": "bash scripts/push-to-github.sh",
    "deploy": "bash scripts/deploy-to-vercel.sh",
    "check": "bash scripts/check-code.sh",
    "export": "next build && next export",
    "postinstall": "next telemetry disable"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.19",
    "@heroicons/react": "^2.1.1",
    "@neondatabase/serverless": "^1.0.1",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^20.19.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.17",
    "critters": "^0.0.20",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.29",
    "lucide-react": "^0.309.0",
    "next": "^14.2.29",
    "openai": "^4.104.0",
    "pdf-parse": "1.1.1",
    "postcss": "^8.4.35",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.2.3",
    "react-icons": "^5.0.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@types/jest": "^29.5.12",
    "@types/pdf-parse": "^1.1.5",
    "babel-jest": "^30.0.0-beta.3",
    "file-loader": "^6.2.0",
    "ignore-loader": "^0.1.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/app/__tests__/setup.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/__tests__/**/*.test.[jt]s?(x)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!(@testing-library|@headlessui|@heroicons)/)"
    ]
  }
}
